#!/bin/zsh

SCRIPT="./setup_nvim.zsh"

# Check if the script exists
if [ ! -f "$SCRIPT" ]; then
  echo "‚ùå $SCRIPT not found. Please run this from the dotfiles root."
  exit 1
fi

# Make the script executable
chmod +x "$SCRIPT"

# Run the script
echo "‚ñ∂Ô∏è Running $SCRIPT..."
"$SCRIPT"

# Remove the executable permission
chmod -x "$SCRIPT"
echo "üö´ Removed executable permission from $SCRIPT"

echo "‚úÖ Neovim setup complete."

