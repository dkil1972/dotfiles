# Rails
# console
function sc() {
  if [ -x script/rails ]; then
    script/rails console $1
  else
    script/console $1
  fi
}
# server
function ss() {
  if [ -x script/rails ]; then
    script/rails server thin $@
  else
    script/server $@
  fi
}
# generator
function sg() {
  if [ -x script/rails ]; then
    script/rails generate $@
  else
    script/generate $@
  fi
}

#rspec
function rsn() {
  rspec --drb -cf nested "$1"
}

alias rs="rspec"

