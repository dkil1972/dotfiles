# ls
# set default flags
if grep --color=auto --quiet "" "$HOME"/.bashrc >/dev/null 2>&1
then
  alias grep='grep --color=auto'
fi

if ls --color=never --directory / >/dev/null 2>&1
then
  # enable colors with GNU ls
  alias ls='ls --color=auto'
  alias l='ls -lAh --color=auto'
else
  alias ls='ls -F'
  alias l='ls -lAh'
fi

alias sr="screen -r"
alias df='cd ~/.dotfiles/'

#ssh logins
alias si="ssh -p 47926 invokoco@invoko.co.uk"
alias spla="ssh publandl@ramjet.3v0.net"

alias ea='vim ~/.dotfiles/bash/aliases'
# changing directory to project
function p { cd ~/dev/$1; }
function biz { ruby ~/1025.rb "$1" "$2" "$3"; }

# Git
alias grm="git status | grep deleted | awk '{print \$3}' | xargs git rm"

#heroku
alias hld="heroku logs --app saidyes-demo"
alias hls="heroku logs --app saidyes-staging"
alias hlp="heroku logs --app saidyes"
alias hcd="heroku console --app saidyes-demo"
alias hcs="heroku console --app saidyes-staging"
alias hcp="heroku console --app saidyes"

#mongo
alias m3="/usr/local/Cellar/mongodb/3.0.2/bin/mongo"
alias mi3="/usr/local/Cellar/mongodb/3.0.2/bin/mongoimport"

#rspec
function rsn() {
  rspec --drb -cf nested "$1"
}

alias rs="rspec"

alias ctl="cat /dev/null > log/test.log"
alias cdl="cat /dev/null > log/development.log"

