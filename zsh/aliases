# cd
alias ..='cd ..'

# ls (detect GNU vs BSD for color support)
if ls --color=auto / &>/dev/null; then
  alias ls="ls -F --color=auto"
  alias l="ls -lAh --color=auto"
else
  alias ls="ls -F"
  alias l="ls -lAhG"
fi
alias ll="ls -l"
alias la='ls -A'

# open (use xdg-open on Linux)
if [[ "$(uname)" == "Linux" ]] && ! command -v open &>/dev/null; then
  alias open='xdg-open'
fi

# git
alias gl='git pull'
alias gp='git push'
alias gd='git diff'
alias gc='git commit'
alias gca='git commit -a'
alias gco='git checkout'
alias gb='git branch'
alias gs='git status'
alias grm="git status | grep deleted | awk '{print \$3}' | xargs git rm"
alias grl='revlog() { git log -n $1 --format="%s" --reverse; }; revlog'

# commands starting with % for pasting from web
alias %=' '
alias rl='. ~/.zshrc'
alias ea='vim ~/.zsh/aliases'
alias vim='nvim'

# email inboxes
alias invg='open https://mail.google.com/mail/u/2/#inbox'
alias dkg='open https://mail.google.com/mail/u/0/#inbox'

alias jap='open https://www.notion.so/Job-Application-Pipeline-90c67923e56149abb9ac2347c43197e1'
alias cvs='open "https://drive.google.com/drive/u/0/folders/0B7EyGhXLpAqfSWU3UHdITTZkaEk?resourcekey=0-UMoC3eDvdSjIu3xQxi8P2g"'
alias jsc='open https://www.udemy.com/course/the-complete-javascript-course/learn/lecture/22648183#overview'

#tmux
alias tsb='tmux show-buffer'
alias tlb='tmux list-buffer'
alias tpb='tmux pasteb'
alias tls='tmux ls'
alias tn='tmux_new() { tmux new -s $1 };tmux_new'
alias tat='tmux_attach() { tmux attach -t $1 };tmux_attach'
