# cd
alias ..='cd ..'

# ls
alias ls="ls -F"
alias l="ls -lAhG"
alias ll="ls -l"
alias la='ls -A'

# git
alias gl='git pull'
alias gp='git push'
alias gd='git diff'
alias gc='git commit'
alias gca='git commit -a'
alias gco='git checkout'
alias gb='git branch'
alias gs='git status'
alias grm="git status | grep deleted | awk '{print \$3}' | xargs git rm"

# commands starting with % for pasting from web
alias %=' '
alias rl='. ~/.zshrc'

alias ea='vim ~/.zsh/aliases'

